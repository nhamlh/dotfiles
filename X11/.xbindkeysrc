# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +1000"
   XF86AudioRaiseVolume

# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -1000"
   XF86AudioLowerVolume

# Mute volume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
   XF86AudioMute

# Increase brightness
"xbacklight -inc 10; notify-send 'brightness up'"
   XF86MonBrightnessUp

# Decrease brightness
"xbacklight -dec 10; notify-send 'brightness down'"
   XF86MonBrightnessDown

"autorandr -c"
  F7

# Take screenshot, meanwhile copy it to clipboard
"scrot -s -f -e 'xclip -i $f -selection clipboard -t image/png' ~/Screenshots/screenshot-%Y-%m-%d_$wx$h.png"
  F3

